<h1> Show page </h1>

<h2> <%= @cocktail.name %> </h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete, data: {:confirm => 'Are you sure?'} do %>
        <i class="fas fa-dumpseter"></i>
        <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to "Back to Index", root_path%>
